{
  "name": "node-ts-prisma-todolist",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "keywords": [
    "node",
    "typescript",
    "prisma",
    "postgresql",
    "docker",
    "eslint",
    "jest"
  ],
  "scripts": {
    "build": "rimraf dist && swc ./src -d dist",
    "dev": "docker-compose up",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:up:tests": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down:tests": "docker-compose -f docker-compose.test.yml down",
    "docker:migrate:dev": "docker compose exec backend yarn prisma migrate dev --name",
    "docker:migrate:deploy": "docker compose exec backend yarn prisma migrate deploy",
    "docker:rebuild:backend": "docker-compose up -d --build backend",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate:tests": "dotenv -e .env.test -- prisma migrate deploy",
    "setup": "yarn docker:up && yarn docker:migrate:deploy",
    "start": "node dist/index.js",
    "start:docker": "yarn build && node --inspect=0.0.0.0 dist/index.js",
    "test": "jest -i"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "joi": "^17.6.0",
    "morgan": "^1.10.0",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.2.179",
    "@tsconfig/node16": "^1.0.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.0.0",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.0.5",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.31.0",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "^28.1.0",
    "prisma": "^4.0.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1"
  }
}
